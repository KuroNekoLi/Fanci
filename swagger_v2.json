      "put": {
        "tags": [
          "Message"
        ],
        "summary": "編輯訊息內容 __________🔒 已註冊的fanci使用者",
        "parameters": [
          {
            "name": "messageType",
            "in": "path",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/MessageServiceType"
            }
          },
          {
            "name": "messageId",
            "in": "path",
            "description": "訊息Id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "異動訊息參數",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessageParam"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessageParam"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ChatMessageParam"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "未驗證"
          },
          "403": {
            "description": "不是發文者"
          },
          "204": {
            "description": "成功"
          },
          "404": {
            "description": "找不到訊息"
          }
        },
        "security": [
          {
            "oauth2": [
              "user",
              "BANNED_2_messageId"
            ]
          }
        ]
