    "/api/v2/Message/{messageType}/{messageId}": {
      "get": {
        "tags": [
          "Message"
        ],
        "summary": "取得單一訊息 __________🔒 已註冊的fanci使用者",
        "parameters": [
          {
            "name": "messageType",
            "in": "path",
            "description": "",
